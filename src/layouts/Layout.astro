---
// src/layouts/Layout.astro
// Menggunakan BaseLayout untuk memastikan semua halaman memiliki SEO dasar yang konsisten.
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Meneruskan semua props dari halaman ke BaseLayout
const { ...props } = Astro.props;
---
<BaseLayout {...props}>
  <Header slot="header" />
  <slot />
  <Footer slot="footer" />
</BaseLayout>
