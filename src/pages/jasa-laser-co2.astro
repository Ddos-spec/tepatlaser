---
// jasa-laser-co2.astro - Halaman layanan Laser CO2
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import CTA from '../components/CTA.astro';
import { SERVICES, SITE_CONFIG, WHATSAPP_MESSAGES } from '../utils/constants.js';
import { generateMetaTags, generateServiceSchema, generateBreadcrumbSchema } from '../utils/seo.js';

// Find Laser CO2 service
const service = SERVICES.find(s => s.slug === 'jasa-laser-co2');

// SEO Meta Tags - PERBAIKAN: Menambahkan publishedTime, modifiedTime, dan author
const metaTags = generateMetaTags({
  title: `${service.name} - Cutting & Engraving Material Non-Metal`,
  description: `${service.description}. Teknologi laser CO2 terdepan untuk cutting dan engraving acrylic, kayu, kain dengan detail sempurna. Quote gratis 24 jam.`,
  keywords: service.keywords,
  url: `${service.slug}/`, // Disesuaikan dengan struktur URL
  type: "service",
  image: service.image,
  // --- TAMBAHAN UNTUK MENGATASI ERROR ---
  publishedTime: "2024-01-01T00:00:00Z", // Tanggal publikasi statis
  modifiedTime: "2024-01-01T00:00:00Z", // Tanggal modifikasi statis
  author: SITE_CONFIG.author // Mengambil author dari konfigurasi
  // --------------------------------------
});

// Structured Data
const serviceSchema = generateServiceSchema(service);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Beranda', url: '' },
  { name: 'Layanan', url: '#services' },
  { name: service.name, url: `${service.slug}/` }
]);
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  keywords={metaTags.keywords}
  url={metaTags.canonical}
  jsonLd={[serviceSchema, breadcrumbSchema]}
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <Hero
    title={`${service.name} Profesional`}
    subtitle="Cutting & Engraving | Acrylic & Non-Metal | Detail Sempurna"
    description="Teknologi laser CO2 terdepan untuk cutting dan engraving material non-metal dengan detail yang sempurna. Ideal untuk acrylic, kayu, kain, kulit, dan material organik lainnya dengan hasil finishing yang halus."
    primaryCTA="Konsultasi Laser CO2"
    secondaryCTA="Lihat Portofolio"
    backgroundImage={service.image}
    whatsappMessage={WHATSAPP_MESSAGES.co2}
  />

  <!-- Service Overview -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="heading-lg text-gray-900 mb-6">Solusi Cutting & Engraving Material Non-Metal</h2>
          <p class="text-xl text-gray-600 mb-8">
            Laser CO2 kami memberikan hasil cutting dan engraving yang sempurna pada berbagai material non-metal, menjadikannya pilihan utama untuk industri kreatif dan manufaktur di Jabodetabek.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Detail Sempurna</h3>
                <p class="text-gray-600">Hasil cutting dan engraving dengan detail yang sangat halus dan presisi.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Finishing Halus</h3>
                <p class="text-gray-600">Tepi hasil cutting yang halus tanpa perlu finishing tambahan pada sebagian besar material.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Multi-Material</h3>
                <p class="text-gray-600">Mampu memproses berbagai jenis material non-metal dengan hasil optimal.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <img 
            src={service.image} 
            alt={service.name}
            class="rounded-xl shadow-xl w-full"
            loading="lazy"
          />
          <div class="absolute -bottom-6 -right-6 bg-white rounded-lg shadow-lg p-6">
            <div class="text-3xl font-bold text-blue-600 mb-1">0.05mm</div>
            <div class="text-gray-600 text-sm">Detail Engraving</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Material Capabilities -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-4">Material yang Dapat Diproses</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Laser CO2 kami dirancang untuk memberikan hasil terbaik pada berbagai jenis material non-metal
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Acrylic</h3>
          <p class="text-gray-600 mb-4">Berbagai ketebalan acrylic dengan hasil potong yang halus dan mengilap</p>
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></div>
            <div>
              <h4 class="font-semibold text-gray-900">Ketebalan</h4>
              <p class="text-gray-700 text-sm">1mm - 25mm</p>
            </div>
          </div>
          <div class="flex items-start space-x-3 mt-2">
            <div class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></div>
            <div>
              <h4 class="font-semibold text-gray-900">Aplikasi</h4>
              <p class="text-gray-700 text-sm">Display, signage, aquarium, part industri</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Kayu & MDF</h3>
          <p class="text-gray-600 mb-4">Cutting dan engraving pada berbagai jenis kayu dan MDF dengan detail tinggi</p>
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
            <div>
              <h4 class="font-semibold text-gray-900">Ketebalan</h4>
              <p class="text-gray-700 text-sm">Hingga 15mm</p>
            </div>
          </div>
          <div class="flex items-start space-x-3 mt-2">
            <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
            <div>
              <h4 class="font-semibold text-gray-900">Aplikasi</h4>
              <p class="text-gray-700 text-sm">Furniture, signage, dekorasi, craft</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Kain & Kulit</h3>
          <p class="text-gray-600 mb-4">Engraving dan cutting pada kain dan kulit dengan detail presisi tinggi</p>
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-purple-600 rounded-full mt-2 flex-shrink-0"></div>
            <div>
              <h4 class="font-semibold text-gray-900">Aplikasi</h4>
              <p class="text-gray-700 text-sm">Fashion, upholstery, craft, personalisasi</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Applications -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-6">Aplikasi Laser CO2</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Berbagai industri dan kebutuhan kreatif yang dapat dipenuhi dengan teknologi laser CO2 kami
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Signage & Display</h3>
          <p class="text-gray-600">Letter signage, display toko, exhibition stand, dan berbagai kebutuhan branding visual.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Furniture & Dekorasi</h3>
          <p class="text-gray-600">Meja, kursi, panel dinding, hiasan rumah, dan berbagai produk furnitur custom.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Fashion & Apparel</h3>
          <p class="text-gray-600">Personalisasi pakaian, cutting kain, engraving kulit untuk produk fashion unik.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Souvenir & Craft</h3>
          <p class="text-gray-600">Produk souvenir custom, kerajinan tangan, dan berbagai item kreatif lainnya.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA />

  <Footer slot="footer" />
</BaseLayout>