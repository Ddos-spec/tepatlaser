---
// contact.astro - Halaman kontak
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';
import { SITE_CONFIG, FAQ } from '../utils/constants.js';
import { generateMetaTags, generateBreadcrumbSchema } from '../utils/seo.js';

// SEO Meta Tags
const metaTags = generateMetaTags({
  title: "Kontak Kami - Konsultasi Gratis Laser Cutting",
  description: "Hubungi LaserCut Pro untuk konsultasi gratis dan quote terbaik. Lokasi di Bandung, melayani seluruh Jawa Barat. Respon cepat dalam 24 jam.",
  keywords: "kontak laser cutting, konsultasi gratis, quote laser cutting, alamat bandung, whatsapp laser cutting",
  url: "/contact",
  type: "website"
});

// Structured Data
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Beranda', url: '/' },
  { name: 'Kontak', url: '/contact' }
]);
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  keywords={metaTags.keywords}
  url={metaTags.canonical}
  jsonLd={[breadcrumbSchema]}
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20 mt-16">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative z-10 container-custom text-center">
      <h1 class="heading-xl text-white mb-6">Hubungi Kami</h1>
      <p class="text-xl md:text-2xl text-blue-100 mb-8 max-w-3xl mx-auto">
        Siap membantu mewujudkan project laser cutting Anda dengan konsultasi gratis dan quote terbaik
      </p>
    </div>
  </section>
  
  <!-- Breadcrumb -->
  <section class="bg-gray-50 py-4">
    <div class="container-custom">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
              Beranda
            </a>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Kontak</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </section>
  
  <!-- Contact Information -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Info -->
        <div>
          <h2 class="heading-lg text-gray-900 mb-8">Informasi Kontak</h2>
          
          <div class="space-y-8">
            <!-- Address -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Alamat Kantor</h3>
                <p class="text-gray-700 leading-relaxed">
                  {SITE_CONFIG.address}
                </p>
                <p class="text-sm text-gray-600 mt-2">
                  Mudah diakses dari berbagai wilayah di Jawa Barat
                </p>
              </div>
            </div>
            
            <!-- Phone -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
