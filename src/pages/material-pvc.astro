---
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MATERIALS, SERVICES } from '../utils/constants.js';

const material = MATERIALS.find(m => m.id === 'pvc');
const recommendedService = SERVICES.find(s => s.id === 'laser-co2');

const jsonLd = material ? {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": material.name,
  "description": material.description,
  "category": "Laser Cutting Material",
  "brand": {
    "@type": "Brand",
    "name": "Tepat Laser"
  },
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "IDR",
    "seller": {
      "@type": "Organization",
      "name": "Tepat Laser"
    }
  }
} : null;
---

{material ? (
  <BaseLayout 
    title={`${material.name} - Material Laser Cutting Premium`}
    description={material.description}
    keywords={material.keywords}
    image={material.image}
    jsonLd={jsonLd}
  >
    <Header slot="header" />
    
    <main>
      <section class="relative bg-gradient-to-br from-green-900 via-green-800 to-green-700 text-white py-20">
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h1 class="text-4xl lg:text-5xl font-bold mb-6">
                Jasa Laser Cutting {material.name}
              </h1>
              <p class="text-xl mb-8 text-green-100">
                {material.description}
              </p>
              <div class="flex flex-wrap gap-4">
                <a 
                  href={`https://api.whatsapp.com/send?phone=6285165693179&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20${material.name}.%20Bisa%20konsultasi?`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-green-500 hover:bg-green-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Konsultasi Gratis
                </a>
                <a 
                  href="/contact"
                  class="border-2 border-white text-white hover:bg-white hover:text-green-900 px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Request Quote
                </a>
              </div>
            </div>
            <div class="relative">
              <img 
                src={material.image} 
                alt={`Sample ${material.name}`}
                class="w-full h-96 object-cover rounded-lg shadow-2xl"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </section>

      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Karakteristik {material.name}
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Material plastik berkualitas tinggi dengan fleksibilitas dan daya tahan optimal
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Tahan Kimia</h3>
              <p class="text-gray-600">Resisten terhadap berbagai bahan kimia dan tidak mudah terkorosi</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Fleksibel</h3>
              <p class="text-gray-600">Mudah dibentuk dan dipotong sesuai kebutuhan desain yang kompleks</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Ekonomis</h3>
              <p class="text-gray-600">Harga terjangkau dengan kualitas tinggi untuk berbagai aplikasi</p>
            </div>
          </div>
        </div>
      </section>

      

      <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                Spesifikasi Teknis
              </h2>
              <div class="space-y-4">
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Ketebalan</span>
                  <span class="text-gray-600">{material.thickness}</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Ukuran Standard</span>
                  <span class="text-gray-600">1220 x 2440 mm</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Toleransi Cutting</span>
                  <span class="text-gray-600">Â±0.02 mm</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Finishing</span>
                  <span class="text-gray-600">Polished Edge</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Warna Tersedia</span>
                  <span class="text-gray-600">Clear, Opal, Warna Custom</span>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </section>

      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Produksi Umum
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Beberapa contoh hasil produksi umum menggunakan material ini.
            </p>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <img src="/images/pcvboard (1).webp" alt="Produksi Umum 1" class="w-full h-48 object-cover rounded-lg shadow-md"/>
            <img src="/images/pcvboard (2).webp" alt="Produksi Umum 2" class="w-full h-48 object-cover rounded-lg shadow-md"/>
            <img src="/images/pcvboard (3).webp" alt="Produksi Umum 3" class="w-full h-48 object-cover rounded-lg shadow-md"/>
            <img src="/images/pcvboard (4).webp" alt="Produksi Umum 4" class="w-full h-48 object-cover rounded-lg shadow-md"/>
          </div>
        </div>
      </section>

      

      

      {recommendedService && (
        <section class="py-16 bg-green-50">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Mesin Rekomendasi untuk {material.name}
              </h2>
              <p class="text-xl text-gray-600">
                Teknologi laser CO2 untuk hasil cutting PVC terbaik
              </p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-8">
              <div class="grid lg:grid-cols-2 gap-8 items-center">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {recommendedService.name}
                  </h3>
                  <p class="text-gray-600 mb-6">
                    {recommendedService.description}
                  </p>
                  <div class="space-y-3">
                    {recommendedService.features.map((feature) => (
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span class="text-gray-700">{feature}</span>
                      </div>
                    ))}
                  </div>
                </div>
                <div>
                  <img 
                    src={recommendedService.image} 
                    alt={recommendedService.name}
                    class="w-full h-64 object-cover rounded-lg"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          </div>
        </section>
      )}
    </main>

    <Footer slot="footer" />
  </BaseLayout>
) : (
  <BaseLayout title="Material Tidak Ditemukan" description="Halaman untuk material yang tidak ditemukan.">
    <Header slot="header" />
    <main class="text-center py-20">
      <h1 class="text-4xl font-bold mb-4">404 - Material Tidak Ditemukan</h1>
      <p class="text-lg mb-8">Maaf, material yang Anda cari tidak ada atau telah dipindahkan.</p>
      <a href="/" class="bg-blue-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-blue-700 transition-colors">
        Kembali ke Beranda
      </a>
    </main>
    <Footer slot="footer" />
  </BaseLayout>
)}
