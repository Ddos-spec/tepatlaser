---
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MATERIALS, SERVICES } from '../utils/constants.js';

const material = MATERIALS.find(m => m.id === 'pvc');
const recommendedService = SERVICES.find(s => s.id === 'laser-co2');

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": material.name,
  "description": material.description,
  "category": "Laser Cutting Material",
  "brand": {
    "@type": "Brand",
    "name": "Tepat Laser"
  },
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "IDR",
    "seller": {
      "@type": "Organization",
      "name": "Tepat Laser"
    }
  }
};
---

<BaseLayout 
  title={`${material.name} - Material Laser Cutting Premium`}
  description={material.description}
  keywords={material.keywords}
  image={material.image}
  jsonLd={jsonLd}
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-green-900 via-green-800 to-green-700 text-white py-20">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            Jasa Laser Cutting {material.name}
          </h1>
          <p class="text-xl mb-8 text-green-100">
            {material.description}
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href={`https://api.whatsapp.com/send?phone=6281234567890&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20${material.name}.%20Bisa%20konsultasi?`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-green-500 hover:bg-green-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
            >
              Konsultasi Gratis
            </a>
            <a 
              href="/tepatlaser/contact" 
              class="border-2 border-white text-white hover:bg-white hover:text-green-900 px-8 py-3 rounded-lg font-semibold transition-colors"
            >
              Request Quote
            </a>
          </div>
        </div>
        <div class="relative">
          <img 
            src={material.image} 
            alt={`Sample ${material.name}`}
            class="w-full h-96 object-cover rounded-lg shadow-2xl"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Material Characteristics -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Karakteristik {material.name}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Material plastik berkualitas tinggi dengan fleksibilitas dan daya tahan optimal
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Tahan Kimia</h3>
          <p class="text-gray-600">Resisten terhadap berbagai bahan kimia dan tidak mudah terkorosi</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Fleksibel</h3>
          <p class="text-gray-600">Mudah dibentuk dan dipotong sesuai kebutuhan desain yang kompleks</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Ekonomis</h3>
          <p class="text-gray-600">Harga terjangkau dengan kualitas tinggi untuk berbagai aplikasi</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Specifications -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Spesifikasi Teknis
          </h2>
          <div class="space-y-4">
            <div class="flex justify-between py-3 border-b border-gray-200">
              <span class="font-medium text-gray-900">Ketebalan</span>
              <span class="text-gray-600">{material.thickness}</span>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-200">
              <span class="font-medium text-gray-900">Ukuran Standard</span>
              <span class="text-gray-600">1220 x 2440 mm</span>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-200">
              <span class="font-medium text-gray-900">Toleransi Cutting</span>
              <span class="text-gray-600">Â±0.05 mm</span>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-200">
              <span class="font-medium text-gray-900">Finishing</span>
              <span class="text-gray-600">Smooth & Clean Edge</span>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-200">
              <span class="font-medium text-gray-900">Warna Tersedia</span>
              <span class="text-gray-600">Putih, Hitam, Transparan, Custom</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 p-8 rounded-lg">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Aplikasi Umum</h3>
          <div class="grid grid-cols-2 gap-4">
            {material.applications.map((app) => (
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-600 rounded-full"></div>
                <span class="text-gray-700">{app}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recommended Service -->
  <section class="py-16 bg-green-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Mesin Rekomendasi untuk {material.name}
        </h2>
        <p class="text-xl text-gray-600">
          Teknologi laser CO2 untuk hasil cutting PVC terbaik
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-lg p-8">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {recommendedService.name}
            </h3>
            <p class="text-gray-600 mb-6">
              {recommendedService.description}
            </p>
            <div class="space-y-3">
              {recommendedService.features.map((feature) => (
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </div>
              ))}
            </div>
            <div class="mt-6">
              <span class="text-2xl font-bold text-green-600">{recommendedService.price}</span>
            </div>
          </div>
          <div>
            <img 
              src={recommendedService.image} 
              alt={recommendedService.name}
              class="w-full h-64 object-cover rounded-lg"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-green-600 to-green-700 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">
        Siap Memulai Project {material.name} Anda?
      </h2>
      <p class="text-xl mb-8 text-green-100">
        Konsultasikan kebutuhan cutting Anda dengan tim ahli kami. Gratis estimasi dan saran teknis.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={`https://api.whatsapp.com/send?phone=6281234567890&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20${material.name}.%20Bisa%20konsultasi?`}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-green-500 hover:bg-green-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          Chat WhatsApp
        </a>
        <a 
          href="/tepatlaser/contact" 
          class="border-2 border-white text-white hover:bg-white hover:text-green-700 px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          Request Quote Detail
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

