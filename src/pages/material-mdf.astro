---
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MATERIALS, SERVICES } from '../utils/constants.js';

const material = MATERIALS.find(m => m.id === 'mdf');
const recommendedService = SERVICES.find(s => s.id === 'laser-co2');
---

{material ? (
  <BaseLayout 
    title={`${material.name} - Material Laser Cutting Premium`}
    description={material.description}
    keywords={material.keywords}
    image={material.image}
  >
    <Header slot="header" />
    
    <main>
      <section class="relative bg-gradient-to-br from-white via-gray-50 to-gray-100 text-gray-900 py-20">
        <div class="absolute inset-0 bg-white/20"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h1 class="text-4xl lg:text-5xl font-bold mb-6">
                Jasa Laser Cutting {material.name}
              </h1>
              <p class="text-xl mb-8 text-gray-700">
                {material.description}
              </p>
              <div class="flex flex-wrap gap-4">
                <a 
                  href={`https://api.whatsapp.com/send?phone=6285165693179&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20${material.name}.%20Bisa%20konsultasi?`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-gray-500 hover:bg-gray-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Konsultasi Gratis
                </a>
                <a 
                  href="/contact"
                  class="border-2 border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Request Quote
                </a>
              </div>
            </div>
            <div class="relative">
              <img 
                src={material.image} 
                alt={`Sample ${material.name}`}
                class="w-full h-96 object-cover rounded-lg shadow-2xl"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </section>

      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Karakteristik {material.name}
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Medium Density Fiberboard dengan kepadatan tinggi dan permukaan halus untuk berbagai aplikasi interior
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Permukaan Halus</h3>
              <p class="text-gray-600">Tekstur permukaan yang rata dan halus, ideal untuk finishing cat dan veneer</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-brown-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-brown-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Kepadatan Tinggi</h3>
              <p class="text-gray-600">Struktur yang padat dan kuat dengan stabilitas dimensi yang baik</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Mudah Dibentuk</h3>
              <p class="text-gray-600">Fleksibilitas tinggi untuk berbagai bentuk cutting dan aplikasi kreatif</p>
            </div>
          </div>
        </div>
      </section>

      

      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Produksi Umum
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Beberapa contoh hasil produksi umum menggunakan material ini.
            </p>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <img src="/images/mdf (4).webp" alt="Produksi Umum 1" class="w-full h-auto object-cover rounded-lg shadow-md"/>
            <img src="/images/mdf (3).webp" alt="Produksi Umum 2" class="w-full h-auto object-cover rounded-lg shadow-md"/>
            <img src="/images/mdf (2).webp" alt="Produksi Umum 3" class="w-full h-auto object-cover rounded-lg shadow-md"/>
            <img src="/images/mdf (1).webp" alt="Produksi Umum 4" class="w-full h-auto object-cover rounded-lg shadow-md"/>
          </div>
        </div>
      </section>

     

      <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                Spesifikasi Teknis
              </h2>
              <div class="space-y-4">
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Ketebalan</span>
                  <span class="text-gray-600">{material.thickness}</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Ukuran Standard</span>
                  <span class="text-gray-600">1220 x 2440 mm</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Toleransi Cutting</span>
                  <span class="text-gray-600">Â±0.02 mm</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Finishing</span>
                  <span class="text-gray-600">Polished Edge</span>
                </div>
                <div class="flex justify-between py-3 border-b border-gray-200">
                  <span class="font-medium text-gray-900">Warna Tersedia</span>
                  <span class="text-gray-600">Clear, Opal, Warna Custom</span>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </section>


      {recommendedService && (
        <section class="py-16 bg-gray-50">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Mesin Rekomendasi untuk {material.name}
              </h2>
              <p class="text-xl text-gray-600">
                Teknologi Laser Cutting presisi tinggi untuk cutting MDF dengan detail yang sempurna
              </p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-8">
              <div class="grid lg:grid-cols-2 gap-8 items-center">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {recommendedService.name}
                  </h3>
                  <p class="text-gray-600 mb-6">
                    {recommendedService.description}
                  </p>
                  <div class="space-y-3">
                    {recommendedService.features.map((feature) => (
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-gray-700">{feature}</span>
                      </div>
                    ))}
                  </div>
                </div>
                <div>
                  <img 
                    src={recommendedService.image} 
                    alt={recommendedService.name}
                    class="w-full h-64 object-cover rounded-lg"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          </div>
        </section>
      )}
    </main>

    <Footer slot="footer" />
  </BaseLayout>
) : (
  <BaseLayout title="Material Tidak Ditemukan" description="Halaman untuk material yang tidak ditemukan.">
    <Header slot="header" />
    <main class="text-center py-20">
      <h1 class="text-4xl font-bold mb-4">404 - Material Tidak Ditemukan</h1>
      <p class="text-lg mb-8">Maaf, material yang Anda cari tidak ada atau telah dipindahkan.</p>
      <a href="/" class="bg-blue-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-blue-700 transition-colors">
        Kembali ke Beranda
      </a>
    </main>
    <Footer slot="footer" />
  </BaseLayout>
)}
