---
// src/pages/lokasi/[location].astro
import BaseLayout from '../../components/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.astro';

export async function getStaticPaths() {
  const locations = [
    {
      slug: 'jakarta',
      name: 'Jakarta',
      title: 'Jasa Laser Cutting Jakarta | Harga Terbaik & Presisi',
      description: 'Cari jasa laser cutting terdekat di Jakarta? Tepat Laser menawarkan harga cutting laser terbaik dengan presisi tinggi untuk akrilik, kayu, dan metal.'
    },
    {
      slug: 'depok',
      name: 'Depok',
      title: 'Jasa Laser Cutting Depok | Cepat & Terpercaya',
      description: 'Butuh laser cutting terdekat di Depok? Dapatkan layanan potong laser akrilik dan MDF custom dengan hasil presisi dan pengerjaan cepat.'
    },
    {
      slug: 'bekasi',
      name: 'Bekasi',
      title: 'Jasa Laser Cutting Bekasi | Kualitas Premium',
      description: 'Jasa laser cutting profesional di Bekasi untuk berbagai material. Hubungi kami untuk info harga cutting laser plat besi dan akrilik dengan kualitas terjamin.'
    }
  ];

  return locations.map(location => ({
    params: { location: location.slug },
    props: { location }
  }));
}

const { location } = Astro.props;
const H1 = `Jasa Laser Cutting Profesional di ${location.name}`;
---
<BaseLayout title={location.title} description={location.description}>
  <Header slot="header" />

  <main class="py-16">
    <div class="container-custom">
      <h1 class="heading-lg text-center mb-6">{H1}</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto text-center mb-12">
        Selamat datang di Tepat Laser, solusi utama untuk semua kebutuhan laser cutting Anda di {location.name}. Kami menyediakan layanan potong laser presisi tinggi untuk berbagai material dengan teknologi terdepan dan harga yang kompetitif.
      </p>

      <section class="section-padding bg-gray-50 rounded-xl">
        <h2 class="heading-md text-center mb-8">Layanan Unggulan Kami di {location.name}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Service Item 1: Akrilik -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Laser Cutting Akrilik</h3>
            <p class="text-gray-600">Pembuatan signage, display, huruf timbul, dan merchandise custom dengan hasil potong yang halus dan presisi.</p>
          </div>
          <!-- Service Item 2: Kayu/MDF -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-3">CNC Router Kayu & MDF</h3>
            <p class="text-gray-600">Solusi untuk industri furniture, dekorasi interior, dan partisi dengan detail dan akurasi yang sempurna.</p>
          </div>
          <!-- Service Item 3: Metal -->
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Laser Cutting Metal</h3>
            <p class="text-gray-600">Potong plat besi, stainless steel, dan galvanis untuk kebutuhan manufaktur, otomotif, dan konstruksi.</p>
          </div>
        </div>
      </section>
    </div>
  </main>

  <CTA />

  <Footer slot="footer" />
</BaseLayout>
