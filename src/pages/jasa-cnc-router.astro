---
// jasa-cnc-router.astro - Halaman layanan CNC Router
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import CTA from '../components/CTA.astro';
import { SERVICES, SITE_CONFIG, WHATSAPP_MESSAGES } from '../utils/constants.js';
import { generateMetaTags, generateServiceSchema, generateBreadcrumbSchema } from '../utils/seo.js';

// Find CNC Router service
const service = SERVICES.find(s => s.slug === 'jasa-cnc-router');

// SEO Meta Tags
const metaTags = generateMetaTags({
  title: `${service.name} - Presisi Tinggi untuk Material Kayu & MDF`,
  description: `${service.description}. Teknologi CNC Router terdepan dengan presisi 0.1mm. Melayani cutting kayu, MDF, dan plastik hingga ukuran 2x3 meter. Quote gratis 24 jam.`,
  keywords: service.keywords,
  url: `/${service.slug}`,
  type: "service",
  image: service.image
});

// Structured Data
const serviceSchema = generateServiceSchema(service);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Beranda', url: '/' },
  { name: 'Layanan', url: '/#services' },
  { name: service.name, url: `/${service.slug}` }
]);
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  keywords={metaTags.keywords}
  url={metaTags.canonical}
  jsonLd={[serviceSchema, breadcrumbSchema]}
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <Hero 
    title={`${service.name} Profesional`}
    subtitle="Presisi 0.1mm | Material Kayu & MDF | Ukuran hingga 2x3 Meter"
    description="Teknologi CNC Router terdepan untuk cutting dan engraving material kayu, MDF, dan plastik dengan hasil sempurna. Cocok untuk furniture, signage, prototype, dan dekorasi."
    primaryCTA="Konsultasi CNC Router"
    primaryCTALink={`https://api.whatsapp.com/send?phone=${SITE_CONFIG.whatsapp}&text=${encodeURIComponent(WHATSAPP_MESSAGES.cnc)}`}
    secondaryCTA="Lihat Spesifikasi"
    secondaryCTALink="#specifications"
    backgroundImage={service.image}
    whatsappMessage={WHATSAPP_MESSAGES.cnc}
  />
  
  <!-- Breadcrumb -->
  <section class="bg-gray-50 py-4">
    <div class="container-custom">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
              Beranda
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <a href="/#services" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Layanan</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{service.name}</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </section>
  
  <!-- Service Overview -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="heading-lg text-gray-900 mb-6">Mengapa Memilih CNC Router Kami?</h2>
          <p class="text-lg text-gray-700 mb-8 leading-relaxed">
            CNC Router adalah teknologi cutting yang ideal untuk material non-metal seperti kayu, MDF, dan plastik. 
            Dengan presisi tinggi dan kemampuan cutting hingga ukuran besar, CNC Router menjadi pilihan terbaik 
            untuk industri furniture, signage, dan dekorasi.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            {service.features.map((feature) => (
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-1">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">{feature}</h3>
                  <p class="text-sm text-gray-600">Kualitas terjamin dengan standar industri</p>
                </div>
              </div>
            ))}
          </div>
          
          <div class="bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-blue-900 mb-3">Harga Kompetitif</h3>
            <p class="text-2xl font-bold text-blue-600 mb-2">{service.price}</p>
            <p class="text-sm text-blue-700">*Harga dapat bervariasi tergantung kompleksitas design dan ketebalan material</p>
          </div>
        </div>
        
        <div class="relative">
          <img 
            src={service.image}
            alt="Mesin CNC Router dalam operasi"
            class="w-full h-auto rounded-xl shadow-2xl"
            loading="lazy"
            width="600"
            height="400"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-xl"></div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Specifications -->
  <section id="specifications" class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-6">Spesifikasi Teknis CNC Router</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Mesin CNC Router kami dilengkapi dengan teknologi terdepan untuk memberikan hasil cutting yang presisi dan berkualitas tinggi.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Technical Specifications -->
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Spesifikasi Mesin</h3>
          
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-4">
              <h4 class="font-semibold text-gray-900 mb-2">Area Kerja</h4>
              <p class="text-gray-700">2000mm x 3000mm x 200mm (L x W x H)</p>
            </div>
            
            <div class="border-b border-gray-200 pb-4">
              <h4 class="font-semibold text-gray-900 mb-2">Presisi</h4>
              <p class="text-gray-700">Â±0.1mm (repeatability)</p>
            </div>
            
            <div class="border-b border-gray-200 pb-4">
              <h4 class="font-semibold text-gray-900 mb-2">Kecepatan Cutting</h4>
              <p class="text-gray-700">0-15,000mm/min (variable speed)</p>
            </div>
            
            <div class="border-b border-gray-200 pb-4">
              <h4 class="font-semibold text-gray-900 mb-2">Spindle Motor</h4>
              <p class="text-gray-700">3.2kW Air Cooled Spindle</p>
            </div>
            
            <div class="border-b border-gray-200 pb-4">
              <h4 class="font-semibold text-gray-900 mb-2">Control System</h4>
              <p class="text-gray-700">DSP A11 Controller</p>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Software Support</h4>
              <p class="text-gray-700">AutoCAD, CorelDRAW, Artcam, Type3</p>
            </div>
          </div>
        </div>
        
        <!-- Material Capabilities -->
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Material yang Dapat Diproses</h3>
          
          <div class="space-y-6">
            <div class="bg-green-50 rounded-lg p-4">
              <h4 class="font-semibold text-green-900 mb-3">Kayu & Turunannya</h4>
              <ul class="space-y-2 text-green-800">
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full"></span>
                  <span>Kayu solid (Pine, Oak, Mahogany)</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full"></span>
                  <span>MDF (Medium Density Fiberboard)</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full"></span>
                  <span>Plywood & Multiplex</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full"></span>
                  <span>Particle Board</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-blue-50 rounded-lg p-4">
              <h4 class="font-semibold text-blue-900 mb-3">Plastik & Komposit</h4>
              <ul class="space-y-2 text-blue-800">
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                  <span>Acrylic (PMMA)</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                  <span>PVC & PVC Foam</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                  <span>ABS Plastic</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
                  <span>Polycarbonate (PC)</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-purple-50 rounded-lg p-4">
              <h4 class="font-semibold text-purple-900 mb-3">Material Lainnya</h4>
              <ul class="space-y-2 text-purple-800">
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-purple-600 rounded-full"></span>
                  <span>Foam & Busa</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-purple-600 rounded-full"></span>
                  <span>Karet & Rubber</span>
                </li>
                <li class="flex items-center space-x-2">
                  <span class="w-2 h-2 bg-purple-600 rounded-full"></span>
                  <span>Fiberglass</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Applications -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-6">Aplikasi CNC Router</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          CNC Router kami telah digunakan untuk berbagai aplikasi industri dan kreatif dengan hasil yang memuaskan.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Furniture Custom</h3>
          <p class="text-gray-600 text-sm">Cutting komponen furniture dengan presisi tinggi untuk hasil yang sempurna</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-green-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V1a1 1 0 011-1h2a1 1 0 011 1v3M7 4H5a1 1 0 00-1 1v16a1 1 0 001 1h14a1 1 0 001-1V5a1 1 0 00-1-1h-2M7 4h10M9 9h6m-6 4h6m-6 4h6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Signage & Display</h3>
          <p class="text-gray-600 text-sm">Pembuatan papan nama, signage, dan display dengan detail yang tajam</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Prototype & Model</h3>
          <p class="text-gray-600 text-sm">Pembuatan prototype produk dan model arsitektur dengan akurasi tinggi</p>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-orange-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Dekorasi Interior</h3>
          <p class="text-gray-600 text-sm">Cutting elemen dekoratif untuk interior rumah dan komersial</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Process -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-6">Proses Kerja CNC Router</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Proses yang sistematis dan terstandar untuk memastikan hasil cutting yang optimal dan sesuai ekspektasi.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="relative mb-6">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto text-white text-2xl font-bold">
              1
            </div>
            <div class="hidden md:block absolute top-8 left-full w-full h-0.5 bg-blue-200 transform -translate-y-1/2"></div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Konsultasi & Design</h3>
          <p class="text-gray-600 leading-relaxed">
            Diskusi kebutuhan project, analisis design file, dan rekomendasi material yang sesuai untuk hasil optimal.
          </p>
        </div>
        
        <div class="text-center">
          <div class="relative mb-6">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto text-white text-2xl font-bold">
              2
            </div>
            <div class="hidden md:block absolute top-8 left-full w-full h-0.5 bg-blue-200 transform -translate-y-1/2"></div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Setup & Programming</h3>
          <p class="text-gray-600 leading-relaxed">
            Persiapan mesin, programming toolpath, dan setting parameter cutting sesuai dengan material dan design.
          </p>
        </div>
        
        <div class="text-center">
          <div class="relative mb-6">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto text-white text-2xl font-bold">
              3
            </div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Cutting & Finishing</h3>
          <p class="text-gray-600 leading-relaxed">
            Proses cutting dengan monitoring ketat, quality control, dan finishing untuk hasil yang sempurna.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <CTA 
    title="Butuh Layanan CNC Router Profesional?"
    description="Dapatkan konsultasi gratis untuk project CNC Router Anda. Tim ahli kami siap membantu mewujudkan design Anda dengan presisi tinggi dan kualitas terbaik."
    primaryText="Konsultasi CNC Router"
    primaryLink={`https://api.whatsapp.com/send?phone=${SITE_CONFIG.whatsapp}&text=${encodeURIComponent(WHATSAPP_MESSAGES.cnc)}`}
    secondaryText="Dapatkan Quote"
    secondaryLink="/contact"
    variant="gradient"
    size="lg"
  />
  
  <Footer slot="footer" />
</BaseLayout>

