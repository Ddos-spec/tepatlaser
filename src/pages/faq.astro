---
// src/pages/faq.astro
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Accordion from '../components/Accordion.astro';

const placeholderAnswer = "Jawaban untuk pertanyaan ini akan segera diperbarui. Silakan hubungi tim kami untuk informasi lebih lanjut.";

const faqData = {
  "Harga & Biaya": [
    { q: "Berapa harga laser cutting akrilik?", a: placeholderAnswer },
    { q: "Berapa biaya cutting plat besi?", a: placeholderAnswer },
    { q: "Berapa harga jasa laser cutting?", a: placeholderAnswer },
    { q: "Harga cutting laser per meter berapa?", a: placeholderAnswer },
    { q: "Berapa biaya cutting mdf?", a: placeholderAnswer },
    { q: "Harga laser cutting acrylic per cm?", a: placeholderAnswer },
    { q: "Berapa biaya laser cutting metal?", a: placeholderAnswer },
    { q: "Berapa harga cutting plat?", a: placeholderAnswer },
    { q: "Harga jasa potong akrilik berapa?", a: placeholderAnswer },
  ],
  "Kemampuan & Batasan": [
    { q: "Laser cutting bisa untuk apa saja?", a: placeholderAnswer },
    { q: "Laser cutting bisa memotong apa saja?", a: placeholderAnswer },
    { q: "Apa saja yang bisa di cutting laser?", a: placeholderAnswer },
    { q: "Apakah laser cutting bisa untuk stainless steel?", a: placeholderAnswer },
    { q: "Apa itu laser cutting non metal?", a: placeholderAnswer },
    { q: "Apa yang dimaksud dengan jasa laser cutting?", a: placeholderAnswer },
    { q: "Laser cutting bisa setebal apa?", a: placeholderAnswer },
  ],
  "Perbandingan & Pilihan": [
    { q: "Apa beda laser cutting dan engraving?", a: placeholderAnswer },
    { q: "Apa beda cnc dan laser cutting?", a: placeholderAnswer },
    { q: "Bagaimana cara memilih jasa laser cutting yang baik?", a: placeholderAnswer },
    { q: "Apa kelebihan laser cutting dibanding metode lain?", a: placeholderAnswer },
    { q: "Mengapa laser cutting lebih presisi?", a: placeholderAnswer },
  ],
  "Proses & Cara Kerja": [
    { q: "Bagaimana cara kerja mesin laser cutting?", a: placeholderAnswer },
    { q: "Bagaimana proses laser cutting?", a: placeholderAnswer },
    { q: "Bagaimana cara menghitung biaya laser cutting?", a: placeholderAnswer },
  ],
  "Lokasi & Layanan": [
    { q: "Dimana tempat laser cutting terdekat?", a: placeholderAnswer },
    { q: "Dimana jasa potong akrilik?", a: placeholderAnswer },
    { q: "Dimana bisa laser cutting?", a: placeholderAnswer },
    { q: "Dimana jasa cutting plat?", a: placeholderAnswer },
    { q: "Dimana cari jasa laser cutting?", a: placeholderAnswer },
    { q: "Apakah ada jasa laser cutting di bekasi?", a: placeholderAnswer },
    { q: "Dimana jasa laser cutting di jakarta?", a: placeholderAnswer },
    { q: "Apakah ada jasa laser cutting di depok?", a: placeholderAnswer },
  ]
};

const allFaqs = Object.values(faqData).flat();

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": allFaqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};

const pageTitle = "FAQ - Pertanyaan Umum Seputar Laser Cutting";
const pageDesc = "Temukan jawaban untuk pertanyaan umum seputar jasa laser cutting, harga, material, dan proses kerja di Tepat Laser. Hubungi kami jika pertanyaan Anda tidak terjawab.";
---
<BaseLayout title={pageTitle} description={pageDesc} jsonLd={faqSchema}>
  <Header slot="header" />
  <main class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h1 class="heading-lg">Pertanyaan yang Sering Diajukan (FAQ)</h1>
        <p class="text-xl text-gray-600 mt-4 max-w-3xl mx-auto">Jawaban cepat untuk pertanyaan paling umum mengenai layanan kami.</p>
      </div>

      {Object.entries(faqData).map(([category, faqs]) => (
        <section class="mb-12 max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold text-gray-900 border-b-2 border-blue-600 pb-3 mb-6">{category}</h2>
          <div class="space-y-2">
            {faqs.map(faq => <Accordion question={faq.q} answer={faq.a} />)}
          </div>
        </section>
      ))}
    </div>
  </main>
  <Footer slot="footer" />
</BaseLayout>
