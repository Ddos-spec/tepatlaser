---
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MATERIALS, SERVICES } from '../utils/constants.js';

const material = MATERIALS.find(m => m.id === 'grc');
const recommendedService = SERVICES.find(s => s.id === 'cnc-router');

const jsonLd = material ? {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": material.name,
  "description": material.description,
  "category": "Laser Cutting Material",
  "brand": {
    "@type": "Brand",
    "name": "Tepat Laser"
  },
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "IDR",
    "seller": {
      "@type": "Organization",
      "name": "Tepat Laser"
    }
  }
} : null;
---

{material ? (
  <BaseLayout 
    title={`${material.name} - Material Laser Cutting Premium`}
    description={material.description}
    keywords={material.keywords}
    image={material.image}
    jsonLd={jsonLd}
  >
    <Header slot="header" />
    
    <main>
      <section class="relative bg-gradient-to-br from-stone-900 via-stone-800 to-stone-700 text-white py-20">
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h1 class="text-4xl lg:text-5xl font-bold mb-6">
                Jasa Laser Cutting {material.name}
              </h1>
              <p class="text-xl mb-8 text-stone-100">
                {material.description}
              </p>
              <div class="flex flex-wrap gap-4">
                <a 
                  href={`https://api.whatsapp.com/send?phone=6285165693179&text=Halo,%20saya%20tertarik%20dengan%20jasa%20laser%20cutting%20${material.name}.%20Bisa%20konsultasi?`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-stone-500 hover:bg-stone-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Konsultasi Gratis
                </a>
                <a 
                  href="/contact"
                  class="border-2 border-white text-white hover:bg-white hover:text-stone-900 px-8 py-3 rounded-lg font-semibold transition-colors"
                >
                  Request Quote
                </a>
              </div>
            </div>
            <div class="relative">
              <img 
                src={material.image} 
                alt={`Sample ${material.name}`}
                class="w-full h-96 object-cover rounded-lg shadow-2xl"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </section>

      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              Aplikasi Umum {material.name}
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Galeri proyek yang menggunakan {material.name} sebagai material utama.
            </p>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {material.applications.map((app, index) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src={`/images/grc-app-${index + 1}.webp`} alt={app} class="w-full h-64 object-cover"/>
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-2">{app}</h3>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      {recommendedService && (
        <section class="py-16 bg-stone-50">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Mesin Rekomendasi untuk {material.name}
              </h2>
              <p class="text-xl text-gray-600">
                Teknologi CNC Router heavy-duty untuk cutting GRC dengan presisi tinggi
              </p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-8">
              <div class="grid lg:grid-cols-2 gap-8 items-center">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">
                    {recommendedService.name}
                  </h3>
                  <p class="text-gray-600 mb-6">
                    {recommendedService.description}
                  </p>
                  <div class="space-y-3">
                    {recommendedService.features.map((feature) => (
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span class="text-gray-700">{feature}</span>
                      </div>
                    ))}
                  </div>
                </div>
                <div>
                  <img 
                    src={recommendedService.image} 
                    alt={recommendedService.name}
                    class="w-full h-64 object-cover rounded-lg"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          </div>
        </section>
      )}
    </main>

    <Footer slot="footer" />
  </BaseLayout>
) : (
  <BaseLayout title="Material Tidak Ditemukan" description="Halaman untuk material yang tidak ditemukan.">
    <Header slot="header" />
    <main class="text-center py-20">
      <h1 class="text-4xl font-bold mb-4">404 - Material Tidak Ditemukan</h1>
      <p class="text-lg mb-8">Maaf, material yang Anda cari tidak ada atau telah dipindahkan.</p>
      <a href="/" class="bg-blue-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-blue-700 transition-colors">
        Kembali ke Beranda
      </a>
    </main>
    <Footer slot="footer" />
  </BaseLayout>
)}