---
// jasa-laser-fiber.astro - Halaman layanan Laser Fiber
import BaseLayout from '../components/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import CTA from '../components/CTA.astro';
import { SERVICES, SITE_CONFIG, WHATSAPP_MESSAGES } from '../utils/constants.js';
import { generateMetaTags, generateServiceSchema, generateBreadcrumbSchema } from '../utils/seo.js';

// Find Laser Fiber service
const service = SERVICES.find(s => s.slug === 'jasa-laser-fiber');

// SEO Meta Tags - PERBAIKAN: Menambahkan publishedTime, modifiedTime, dan author
const metaTags = generateMetaTags({
  title: `${service.name} - Presisi Tinggi untuk Material Metal`,
  description: `${service.description}. Teknologi laser fiber tercepat & akurat untuk cutting stainless steel, carbon steel, aluminium hingga ketebalan 20mm. Quote gratis 24 jam.`,
  keywords: service.keywords,
  url: `${service.slug}/`, // Disesuaikan dengan struktur URL
  type: "service",
  image: service.image,
  // --- TAMBAHAN UNTUK MENGATASI ERROR ---
  publishedTime: "2024-01-01T00:00:00Z", // Tanggal publikasi statis
  modifiedTime: "2024-01-01T00:00:00Z", // Tanggal modifikasi statis
  author: SITE_CONFIG.author // Mengambil author dari konfigurasi
  // --------------------------------------
});

// Structured Data
const serviceSchema = generateServiceSchema(service);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Beranda', url: '' },
  { name: 'Layanan', url: '#services' },
  { name: service.name, url: `${service.slug}/` }
]);
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  keywords={metaTags.keywords}
  url={metaTags.canonical}
  jsonLd={[serviceSchema, breadcrumbSchema]}
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <Hero
    title={`${service.name} Profesional`}
    subtitle="Cutting Metal Presisi | Stainless Steel & Carbon Steel | Ketebalan hingga 20mm"
    description="Teknologi laser fiber tercepat & akurat untuk cutting berbagai jenis logam dengan hasil tepi bersih dan presisi tinggi. Ideal untuk industri manufaktur, otomotif, dan konstruksi."
    primaryCTA="Konsultasi Laser Fiber"
    secondaryCTA="Lihat Portofolio"
    backgroundImage={service.image}
    whatsappMessage={WHATSAPP_MESSAGES.fiber}
  />

  <!-- Service Overview -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <img 
            src={service.image} 
            alt={service.name}
            class="rounded-xl shadow-xl w-full"
            loading="lazy"
          />
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="heading-lg text-gray-900 mb-6">Solusi Cutting Metal Presisi Tinggi</h2>
          <p class="text-xl text-gray-600 mb-8">
            Laser Fiber kami mampu memotong berbagai jenis logam dengan presisi tinggi dan kecepatan tinggi, menjadikannya pilihan utama untuk industri manufaktur di Jabodetabek.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Kecepatan Tinggi</h3>
                <p class="text-gray-600">Proses cutting yang jauh lebih cepat dibandingkan metode konvensional.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Ketebalan hingga 20mm</h3>
                <p class="text-gray-600">Mampu memotong material logam hingga ketebalan 20mm.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Tepi Bersih & Presisi</h3>
                <p class="text-gray-600">Hasil cutting dengan tepi yang bersih dan presisi tinggi tanpa deformasi material.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Material Capabilities -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-4">Material yang Dapat Diproses</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Laser Fiber kami dirancang untuk memberikan hasil terbaik pada berbagai jenis material logam
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Stainless Steel</h3>
          <p class="text-gray-600 mb-4">SS304, SS316, dan grade lainnya hingga 20mm</p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">SS304</span>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">SS316</span>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">20mm Max</span>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Carbon Steel</h3>
          <p class="text-gray-600 mb-4">Mild steel hingga 20mm dengan hasil presisi</p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">Mild Steel</span>
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">20mm Max</span>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Aluminium</h3>
          <p class="text-gray-600 mb-4">Aluminium alloy 6061, 5052 hingga 12mm</p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">6061</span>
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">5052</span>
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">12mm Max</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-gray-900 mb-4">Proses Pengerjaan Laser Fiber</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Kami memastikan setiap project Anda dikerjakan dengan standar kualitas tinggi dan presisi maksimal
        </p>
      </div>
      
      <div class="relative">
        <div class="hidden lg:block absolute top-16 left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-blue-200"></div>
        
        <div class="grid md:grid-cols-2 gap-8 relative">
          <div class="bg-white rounded-xl shadow-lg p-8 relative">
            <div class="absolute -top-4 -left-4 w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">1</div>
            <div class="hidden md:block absolute top-8 left-full w-full h-0.5 bg-blue-200 transform -translate-y-1/2"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Design Review & Material Check</h3>
            <p class="text-gray-600 leading-relaxed">
              Kami mereview file desain dan memastikan material sesuai dengan spesifikasi project Anda.
            </p>
          </div>
          
          <div class="bg-white rounded-xl shadow-lg p-8 relative md:mt-16">
            <div class="absolute -top-4 -left-4 w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">2</div>
            <div class="hidden md:block absolute top-8 left-0 w-full h-0.5 bg-blue-200 transform -translate-y-1/2 -translate-x-full"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Programming & Setup</h3>
            <p class="text-gray-600 leading-relaxed">
              Programming parameter laser dan setup mesin untuk memastikan hasil cutting optimal.
            </p>
          </div>
          
          <div class="bg-white rounded-xl shadow-lg p-8 relative md:mt-16">
            <div class="absolute -top-4 -left-4 w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">3</div>
            <div class="hidden md:block absolute top-8 left-full w-full h-0.5 bg-blue-200 transform -translate-y-1/2"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Precision Cutting</h3>
            <p class="text-gray-600 leading-relaxed">
              Proses cutting dilakukan dengan presisi tinggi menggunakan teknologi laser fiber terkini.
            </p>
          </div>
          
          <div class="bg-white rounded-xl shadow-lg p-8 relative">
            <div class="absolute -top-4 -left-4 w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">4</div>
            <div class="hidden md:block absolute top-8 left-0 w-full h-0.5 bg-blue-200 transform -translate-y-1/2 -translate-x-full"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Quality Inspection & Delivery</h3>
            <p class="text-gray-600 leading-relaxed">
              Inspeksi kualitas ketat dan pengiriman tepat waktu oleh tim ahli kami di area Jabodetabek.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA />

  <Footer slot="footer" />
</BaseLayout>